    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",

            // The name of the task defined in tasks.json
            //"preLaunchTask": "Run Home Assistant on port 8123", 

            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
        }
    ]
}